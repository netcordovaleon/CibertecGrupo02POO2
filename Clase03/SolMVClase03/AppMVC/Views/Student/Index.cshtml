@model AppMVC.Models.StudentsViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>Bienvenida a los nuevos estudiantes</h1>

<div class="row">
    <div class="col-md-4">
        <input type="text" asp-for="StudentToSave.Name" class="form-control" placeholder="Ingrese su nombre" />
    </div>
    <div class="col-md-4">
        <input type="text" asp-for="StudentToSave.Age" class="form-control" placeholder="Ingrese su edad" />
    </div>
    <div class="col-md-4">
        <input type="text" asp-for="StudentToSave.Career" class="form-control" placeholder="Ingrese su carrera" />
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <button class="btn btn-primary">Grabar</button>
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th>Nombres</th>
                    <th>Edad</th>
                    <th>Carrera</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.StudentList)
                {
                    //Que cosa se va a repetir?
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Age años
                        </td>
                        <td>
                            @item.Career
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<h4>Nuevamente un saludo a los chicos nuevos:</h4>

<div>
    @Html.Partial("_NewStudentsList", Model)
</div>