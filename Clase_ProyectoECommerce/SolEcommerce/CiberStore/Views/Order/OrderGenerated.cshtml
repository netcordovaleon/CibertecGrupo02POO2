@model OrderDetailViewModel
@{
    ViewData["Title"] = "OrderGenerated";
}

<div class="text-center">
    <h1 class="display-4">Felicidades su Orden #@ViewBag.OrderId fue generada</h1>
</div>

<div class="row">

    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th>Imagen</th>
                    <th>Producto</th>
                    <th>Precio</th>
                    <th>Cantidad</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>

                @if (Model.ProductsToConfirm != null)
                {
                    @foreach (var item in Model.ProductsToConfirm)
                    {
                        <tr>
                            <td><img src="@item.ProductImage" style="width:100px; height:100px;" /></td>
                            <td>@item.ProductName</td>
                            <td>@item.Price</td>
                            <td>@item.Quantity</td>
                            <td>@(item.Price * item.Quantity)</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5">No hay información</td>
                    </tr>
                }


            </tbody>
        </table>
    </div>

</div>

